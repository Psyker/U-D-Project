{% extends 'base_admin.html.twig' %}

{% block body %}

    <h1>Boite de récéption</h1>
    <p>La suppresion d'un message entrainera la suppresion de la réponse envoyée.</p>
    <div class="divider"></div>
    {% if contacts|length > 0 %}
    {% for contact in contacts %}
        <div class="tile mt-10 pt-10">
            <div class="tile-icon">
                <div class="example-tile-icon">
                    <i class="icon icon-file centered"></i>
                </div>
            </div>
            <div class="tile-content">
                <p class="tile-title">{{ contact.firstname }} {{ contact.lastname }}</p>
                <p class="tile-title">{{ contact.email }}</p>
                <p class="tile-subtitle">{{ contact.message }}</p>
                <p class="tile-subtitle"{{ contact.createdAt|date('Y-m-d H:i:s') }}></p>
            </div>
            <div class="tile-action mr-10">
                <a {% if contact.answer %}disabled="true" {% endif %} href="{{ path('contact_answer', {'id': contact.id}) }}" class="btn btn-primary">Contacter</a>
            </div>
            <div class="tile-action">
                <a href="{{ path('contact_delete', {'id': contact.id}) }}" class="btn btn-danger">Supprimer</a>
            </div>
        </div>
        <div class="divider"></div>
    {% endfor %}
    {% else %}
        <div class="empty">
            <div class="empty-icon">
                <i class="icon icon-message"></i>
            </div>
            <h4 class="empty-title">Vous n'avez aucun messages</h4>
        </div>
    {% endif %}

{% endblock %}