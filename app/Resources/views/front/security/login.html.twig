{% block body %}
    {% if error %}
        <div class="alert alert-danger">{{ error.messageKey | trans(error.messageData, 'security') }}</div>
    {% endif %}
    <form action="{{ path('login') }}" method="post">
        <input name="_csrf_token" value="{{ csrf_token('authenticate') }}" type="hidden">
        <div class="form-group" style="margin-top: 20px">
            <label for="username">Username :</label>
            <input id="username" class="form-control" type="text" name="_username" value="{{ last_username }}">
        </div>
        <div class="form-group" style="margin-top: 20px">
            <label for="password">Password :</label>
            <input id="password" class="form-control" type="password" name="_password">
        </div>
        <button style="margin-top: 20px" type="submit" class="btn btn-primary">Se connecter</button>
    </form>
    </div>
{% endblock %}